{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    // "baseUrl": ".",
    // "paths": {
    //   "*": ["./src/*"]
    // },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },

  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
      // "types": ["jest", "testing-library__jest-dom"]
    }
  },
  "include": [
    "./config/jest/setupTests.ts",
    "./src/**/*.js",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
